{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "kframework",
    "patterns": [
        { "include": "#module" },
        { "include": "#requireSource" },
        { "include": "#string" },
        { "include": "#comment" }
    ],
    "repository": {
        "comment": {
            "patterns": [
                {
                    "name": "comment.block.k",
                    "begin": "/\\*",
                    "end": "\\*/"
                },
                {
                    "name": "comment.line.k",
                    "begin": "//",
                    "end": "$\\n?"
                }
            ]
        },

        "requireSource": {
            "name": "keyword.control.requires.k",
            "match": "\\b(requires)\\b"
        },

        "keyword": {
            "patterns": [
                {
                    "name": "keyword.control.k",
                    "match": "\\b(requires)\\b"
                },
                {
                    "name": "keyword.stmt.k",
                    "match": "\\b(rule|syntax|configuration|context)\\b"
                },
                {
                    "name": "entity.name.type.k",
                    "match": "\\b(Id|Int|Bool|String|Token|Lexer|Float|Kresult)\\b"
                },
                {
                    "name": "string.regexp.k",
                    "match": "\\b(owise|anywhere|function|functional|strict|avoid|prefer|bracket|non-assoc|seqstrict|left|right|macro|token|notInRules|autoReject|structural|latex|binder)\\b"
                },
                {
                    "name": "support.type.property-name.k",
                    "match": "HOLE"
                }
            ]
        },
        
        "string": {
            "name": "string.quoted.double.k",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.k",
                    "match": "\\\\."
                }
            ]
        },

        "cell-attr": {
            "match": "([\\w\\d\\-]+)=(\\\"[^\\\"]*\\\")",
            "captures": {
                "1": { "name": "entity.other.attribute-name.tag.k" },
                "2": { "name": "string.quoted.double.k" }
            }
        },

        "cell":{
            "begin": "(<)\\s*([\\w\\d\\-\\_]+)(\\s*[\\w\\d\\-]+=\\\".*\\\")*\\s*(>)",
            "beginCaptures": {
                "1": { "name": "punctuation.definition.tag.k" },
                "2": { "name": "entity.name.tag.k" },
                "3": {
                    "patterns": [
                        { "include": "#cell-attr" }
                    ]
                },
                "4": { "name": "punctuation.definition.tag.k" }
            },
            "end": "(<\\/)\\s*(\\2)\\s*(>)",
            "endCaptures": {
                "1": { "name": "punctuation.definition.tag.k" },
                "2": { "name": "entity.name.tag.k" },
                "3": { "name": "punctuation.definition.tag.k" }
            },
            "patterns": [
                { "include": "#cell" },
                { "include": "#constant" }
            ]
        },

        "constant":{
            "patterns": [
                {
                    "name": "constant.numeric.k",
                    "match": "(-|\\.)?\\b[0-9]+(\\.[0-9]+)?\\b"
                },
                {
                    "name": "keyword.boolean.k",
                    "match": "\\b(true|false)\\b"
                }
            ]
        },

        "syntax": {
            
        },

        "imports-stmt": {
            "match": "(imports)\\s*([\\w\\d\\-_]*)$",
            "captures": {
                "1": { "name": "keyword.control.imports.k"},
                "2": { "name": "entity.name.namespace.imports.k" }
            }
        },

        "module":{
            "begin": "(module)\\s*([\\w\\d\\-\\_]+)",
            "beginCaptures": {
                "1": { "name": "keyword.module.k" },
                "2": { "name": "entity.name.namespace.k" }
            },
            "end": "(endmodule)",
            "endCaptures": {
                "1": { "name": "keyword.module.k" }
            },
            "patterns": [
                { "include": "#cell" },
                { "include": "#string" },
                { "include": "#keyword" },
                { "include": "#constant" },
                { "include": "#comment" },
                { "include": "#imports-stmt" }
            ]
        }
    },
    "scopeName": "source.k"
}